<div class="row">
    <div class="col-md-12 table-responsive">
        <br>
        <h2>Students
            <a href="/students/add" class="btn btn-success float-end">Add New Student</a>
        </h2>
        <hr />
        {{#if students}}
        <table class="table-responsive">
            <thead>
                <tr>
                    <th>Student Num</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Course ID</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{studentNum}}</td>
                    <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                    <td>{{addressStreet}}</td>
                    <td>{{status}}</td>
                    <td><a href="/students?course={{course}}">{{course}}</a></td>
                    <td>
                        <a href="/students/delete/{{studentNum}}" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{#each students}}

        {{/each}}
        {{else}}
        <p>{{message}}</p>
        {{/if}}
    </div>
    {{#unless students}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}

</div>