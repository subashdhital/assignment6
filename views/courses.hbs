<div class="row">
 <div class="col-md-12">
 <br>
 <h2>Courses</h2>
 <hr />
 <table class="table-responsive">
    <thead>
        <th>Course Code</th>
        <th>Course Description</th>
    </thead>
    <tbody>
        {{#each courses}}
                <tr>
                
                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                </tr>
                {{/each}}
    </tbody>
 </table>
 </div>
     {{#unless students}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>