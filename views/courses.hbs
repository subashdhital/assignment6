<div class="row">
 <div class="col-md-12">
 <br>
 <h2>Courses
    <a href="/courses/add" class="btn btn-success float-end">Add New Course</a>
 </h2>
 <hr />
 <table class="table-responsive">
    <thead>
        <th>Course Code</th>
        <th>Course Description</th>
        <th></th>
    </thead>
    <tbody>
        {{#each courses}}
                <tr>
                
                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                    <td>
                        <a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
    </tbody>
 </table>
 </div>
     {{#unless students}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>